{
  "name": "search-and-replace-regex",
  "version": "0.0.0",
  "description": "A powerful regex-based search and replace tool for Obsidian with search highlighting and navigation.",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "lint": "eslint .",
    "release": "bash release.sh",
    "format": "prettier --write \"src/**/*.ts\" && prettier --write \"*.md\""
  },
  "keywords": [],
  "license": "0-BSD",
  "devDependencies": {
    "@codemirror/state": "^6.5.0",
    "@codemirror/view": "^6.38.0",
    "@eslint/js": "9.39.2",
    "@types/node": "25.1.0",
    "esbuild": "0.27.2",
    "eslint-plugin-obsidianmd": "0.1.9",
    "globals": "17.2.0",
    "jiti": "2.6.1",
    "prettier": "^3.8.1",
    "prettier-plugin-sh": "^0.18.0",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0"
  },
  "dependencies": {
    "obsidian": "latest"
  }
}
